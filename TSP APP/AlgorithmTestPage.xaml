<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TSP_APP.AlgorithmTestPage"
             Title="AlgorithmTestPage">
    <VerticalStackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="CenterAndExpand">
        <Button Text="Test All Algorithms"
                x:Name="TestAllAlgosBtn"
                Clicked="TestAllAlgosBtnClicked" />

        <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                               VerticalOptions="CenterAndExpand"
                               Spacing="20">
            <Label x:Name="NNDistanceEfficiencyLbl"
                   Text="NNDistance Efficiency: 0" />

            <Label x:Name="NNTimeEfficiencyLbl"
                   Text="NNTotal Ticks Elapsed: 0" />
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                               VerticalOptions="CenterAndExpand"
                               Spacing="20">
            <Label x:Name="CMDistanceEfficiencyLbl"
                   Text="CMDistance Efficiency: 0" />

            <Label x:Name="CMTimeEfficiencyLbl"
                   Text="CMTotal Ticks Elapsed: 0" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>